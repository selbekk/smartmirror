{
  "name": "backend",
  "version": "1.0.0",
  "description": "The backend for a smart mirror application",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run serve",
    "test": "jest",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "build": "tsc",
    "verify": "npm run lint && npm run build && npm run test",
    "watch": "run-p watch-node watch-ts",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/selbekk/smartmirror.git"
  },
  "author": "Kristofer Giltvedt Selbekk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/selbekk/smartmirror/issues"
  },
  "homepage": "https://github.com/selbekk/smartmirror#readme",
  "dependencies": {
    "@entur/sdk": "^1.2.0",
    "@types/cors": "^2.8.6",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.3",
    "isomorphic-fetch": "^2.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.2",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  }
}
